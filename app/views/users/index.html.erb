<h1>Listing users</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Middle names</th>
    <th>Last name</th>
    <th>Date of birth</th>
    <th>Gender</th>
    <th>Email</th>
    <th>Address 1</th>
    <th>Address 2</th>
    <th>Town</th>
    <th>County</th>
    <th>Postcode</th>
    <th>Contact number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.middle_names %></td>
    <td><%= user.last_name %></td>
    <td><%= user.date_of_birth %></td>
    <td><%= user.gender %></td>
    <td><%= user.email %></td>
    <td><%= user.address_1 %></td>
    <td><%= user.address_2 %></td>
    <td><%= user.town %></td>
    <td><%= user.county %></td>
    <td><%= user.postcode %></td>
    <td><%= user.contact_number %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

